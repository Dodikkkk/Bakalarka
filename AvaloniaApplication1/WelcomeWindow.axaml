<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        Width="400" Height="300"
        MinWidth="400" MinHeight="300"
        x:Class="AvaloniaApplication1.WelcomeWindow"
        Title="WelcomeWindow"
        WindowStartupLocation="CenterScreen"
        RequestedThemeVariant="Light"
        Name="TheWindow">
    
    <StackPanel Name="StackPanel">
        <TextBlock Name="WelcomeTextBlock" FontSize="20" FontWeight="Bold" Margin="0 20 0 20" HorizontalAlignment="Center">Welcome to smart bicycle track browser!</TextBlock>
        <TextBlock Name="ChooseAFileTextBox" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="10">Choose a .gpx file</TextBlock>
        
        <!-- tlacidlo pre vyber suboru -->
        <Button Name="ChooseAFileButton" HorizontalAlignment="Center" FontSize="25" BorderThickness="1" BorderBrush="Black" Margin="10">Browse...</Button>
    </StackPanel>
    
</Window>
